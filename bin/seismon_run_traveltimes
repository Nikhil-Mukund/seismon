This program runs seismon_run.py.

"""

# =============================================================================
#
#                               PREAMBLE
#
# =============================================================================


import os, time

__author__ = "Michael Coughlin <coughlim@carleton.edu>"
__date__ = "2012/2/7"
__version__ = "0.1"

while 1:

   paramsFile = "/home/mcoughlin/Seismon/seismon/input/seismon_params_traveltimes.txt"

   gpsStart = int(os.popen("tconvert now").readline()) - 86400
   gpsEnd = gpsStart + 2*86400

   start_time = time.time()
   os.system("python seismon_traveltimes -p %s -s %d -e %d --doPrivate --doPublic"%(paramsFile,gpsStart,gpsEnd))
   end_time = time.time()
   elapsed_time = end_time - start_time
   print "Elapsed time for Seismon: %f"%(elapsed_time)

