#!/usr/bin/python

"""
%prog

Michael Coughlin (coughlim@carleton.edu)

This program runs seismon_run.py.

"""

# =============================================================================
#
#                               PREAMBLE
#
# =============================================================================


import os, time

__author__ = "Michael Coughlin <coughlim@carleton.edu>"
__date__ = "2012/2/7"
__version__ = "0.1"

gpsEnd = int(os.popen("tconvert now").readline())

while 1:

   paramsFile = "/Seismon/Seismon/seismon/input/seismon_params_earthquakesInfo.txt"

   gpsStart = gpsEnd
   gpsEnd = int(os.popen("tconvert now").readline()) + 8

   start_time = time.time()
   os.system("/usr/bin/python seismon_info -p %s -s %d -e %d --eventfilesType private --doEarthquakes --doEPICs"%(paramsFile,gpsStart,gpsEnd))
   end_time = time.time()
   elapsed_time = end_time - start_time
   print "Elapsed time for Seismon: %f"%(elapsed_time)
   print "python seismon_info -p %s -s %d -e %d --eventfilesType private --doEarthquakes --doEPICs"%(paramsFile,gpsStart,gpsEnd)

   start_time = time.time()
   os.system("/usr/bin/python seismon_info -p %s -s %d -e %d --eventfilesType private --doEarthquakes --doReadEPICs --doPlots --doTimeseries"%(paramsFile,gpsEnd-3600,gpsEnd))
   end_time = time.time()
   elapsed_time = end_time - start_time
   print "Elapsed time for Seismon: %f"%(elapsed_time)
   print "python seismon_info -p %s -s %d -e %d --eventfilesType private --doEarthquakes --doReadEPICs --doPlots"%(paramsFile,gpsEnd-3600,gpsEnd)

